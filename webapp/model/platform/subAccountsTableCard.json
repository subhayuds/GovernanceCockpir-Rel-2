{
    "_version": "1.1.0",
    "sap.app": {
        "id": "card.explorer.table.card",
        "type": "card",
        "applicationVersion": {
            "version": "1.0.0"
        },
        "shortTitle": "A short title for this Card",
        "info": "Additional information about this Card",
        "description": "A long description for this Card",
        "tags": {
            "keywords": [
                "Table",
                "Card"
            ]
        }
    },
    "sap.ui": {
		"technology": "UI5",
		"icons": {
			"icon": "sap-icon://table-view"
		}
	},
    "sap.card": {
        "type": "Table",
        "data": {
            "json": []
        },
        "header": {
            "title": "List of Sub-accounts configured",
            "subTitle": "Sub-accounts in use"
        },
        "footer": {
			"paginator": {
				"pageSize": 7
			}
		},
        "content": {
            "maxItems": 7,
            "minItems": 3,
            "row": {
                "columns": [
                    {
                        "title": "Sub-accounts",
                        "value": "{displayName}",
                        "additionalText": "{region}",
                        "identifier": true,
                        "visible": true,
                        "width": "45%"
                    },
                    {
                        "title": "Created by",
                        "value": "{createdBy}",
                        "visible": false,
                        "width": "30%"
                    },
                    {
                        "title": "Created on",
                        "value": "{createdDate}",
                        "visible": true,
                        "width": "15%"
                    }
                ]
            }
        }
    }
}