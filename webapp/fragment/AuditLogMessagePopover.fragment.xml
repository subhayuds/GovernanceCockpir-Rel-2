<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core">
	<Popover
		id="auditLogMessagePopover"
		title="Audit message"
		class="sapUiContentPadding"
		placement="Left">
		<VBox>
			<Text text="Level: {level}" class="sapUiSmallMarginTopBottom"/>
            <Text text="{message}"  class="sapUiTinyMarginTopBottom"/>
		</VBox>
	</Popover>
</core:FragmentDefinition>