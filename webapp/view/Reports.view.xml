<mvc:View
    controllerName="com.hcl.btp.governance.cockpit.controller.Reports"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:w="sap.ui.integration.widgets"
    xmlns:f="sap.f"
    xmlns:layout="sap.ui.layout"
    displayBlock="true"
>
    <Page id="pgReports">
        <headerContent>
            <ToolbarSpacer />
            <Title
                text="Reports"
                level="H2"
            />
            <ToolbarSpacer />
        </headerContent>
        <content>
            <f:GridContainer
                id="gridReports"
                class="sapUiSmallMargin"
            >
                <f:layout>
                    <f:GridContainerSettings
                        rowSize="84px"
                        columnSize="84px"
                        gap="8px"
                    />
                </f:layout>
                <f:layoutXS>
                    <f:GridContainerSettings
                        rowSize="70px"
                        columnSize="70px"
                        gap="8px"
                    />
                </f:layoutXS>

                <w:Card id="cardMonthlySubaccountCost">
                    <w:layoutData>
                        <f:GridContainerItemLayoutData
                            minRows="5"
                            columns="4"
                        />
                    </w:layoutData>
                </w:Card>
                <w:Card id="cardMonthlySubaccountUsage">
                    <w:layoutData>
                        <f:GridContainerItemLayoutData
                            minRows="5"
                            columns="4"
                        />
                    </w:layoutData>
                </w:Card>
                <w:Card id="cardTableSubAccounts">
                    <w:layoutData>
                        <f:GridContainerItemLayoutData
                            minRows="5"
                            columns="4"
                        />
                    </w:layoutData>
                </w:Card>
                <w:Card id="cardTableEntitlement">
                    <w:layoutData>
                        <f:GridContainerItemLayoutData
                            minRows="5"
                            columns="4"
                        />
                    </w:layoutData>
                </w:Card>
            </f:GridContainer>
        </content>
    </Page>
</mvc:View>
