<mvc:View controllerName="com.hcl.btp.governance.cockpit.controller.PlatformDashboard"
    xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:w="sap.ui.integration.widgets"
	xmlns:f="sap.f"
    xmlns:layout="sap.ui.layout"
	displayBlock="true">
    <Page id="pgPlatform">
        <headerContent>
            <ToolbarSpacer/>
            <Title text="Platform Dashboard" level="H2"/>
            <ToolbarSpacer/>
        </headerContent>
        <content>
            <f:GridContainer id="gridPlatform" class="sapUiSmallMargin">
                <f:layout>
                    <f:GridContainerSettings rowSize="84px" columnSize="84px" gap="8px" />
                </f:layout>
                <f:layoutXS>
                    <f:GridContainerSettings rowSize="70px" columnSize="70px" gap="8px" />
                </f:layoutXS>

                <w:Card id="cardTableSubAccounts" action="onAction">
                    <w:layoutData>
                        <f:GridContainerItemLayoutData minRows="5" columns="8" />
                    </w:layoutData>
                </w:Card>
                <w:Card id="cardTableEntitlement" action="onActionEntitle">
                    <w:layoutData>
                        <f:GridContainerItemLayoutData minRows="5" columns="8" />
                    </w:layoutData>
                </w:Card>
                <w:Card id="resourceMonthlyCount">
                    <w:layoutData>
                        <f:GridContainerItemLayoutData minRows="5" columns="8"/>
                    </w:layoutData>
                </w:Card>
                <w:Card id="resourceMonthlyUsage">
                    <w:layoutData>
                        <f:GridContainerItemLayoutData minRows="5" columns="8"/>
                    </w:layoutData>
                </w:Card>
                <w:Card id="userLogon">
                    <w:layoutData>
                        <f:GridContainerItemLayoutData minRows="5" columns="4"/>
                    </w:layoutData>
                </w:Card>
                <w:Card id="userStatus">
                    <w:layoutData>
                        <f:GridContainerItemLayoutData minRows="5" columns="4"/>
                    </w:layoutData>
                </w:Card>
            </f:GridContainer>
        </content>
    </Page>
</mvc:View>